generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  firstName String
  lastName  String
  password  String
  admin     Boolean @default(false)
}

model Word {
  id           Int           @id @default(autoincrement())
  word         String        @unique
  definitions  Definitions[]
  alternatives Alternative[]
}

model Alternative {
  id    Int    @id @default(autoincrement())
  words Word[]
  word  String @unique
}

model Definitions {
  id         Int    @id @default(autoincrement())
  word       Word   @relation(fields: [wordId], references: [id])
  wordId     Int @unique
  status     Status @default(PENDING)
  definition String
  example    String
}

enum Status {
  PENDING
  APPROVED
  DENIED
}
